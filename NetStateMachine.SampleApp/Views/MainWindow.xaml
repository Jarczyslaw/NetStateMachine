<Window
    x:Class="NetStateMachine.SampleApp.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:NetStateMachine.SampleApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="NetStateMachine.SampleApp"
    Width="900"
    Height="600"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Border Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <GroupBox Header="Options">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Command: " />
                    <ComboBox
                        Width="150"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding Commands}"
                        SelectedItem="{Binding SelectedCommand}" />

                    <Label Content="State: " />
                    <ComboBox
                        Width="150"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding States}"
                        SelectedItem="{Binding SelectedState}" />

                    <CheckBox
                        Margin="10,0,0,0"
                        VerticalContentAlignment="Center"
                        Content="Fire events"
                        IsChecked="{Binding FireEvents}" />

                    <Button
                        Width="100"
                        Margin="10,0,0,0"
                        Command="{Binding ExecuteCommand}"
                        Content="Execute" />
                    <Button
                        Width="100"
                        Margin="10,0,0,0"
                        Command="{Binding InfoCommand}"
                        Content="Info" />
                    <Button
                        Width="100"
                        Margin="10,0,0,0"
                        Command="{Binding ClearCommand}"
                        Content="Clear" />
                </StackPanel>
            </GroupBox>
            <GroupBox
                Grid.Row="1"
                Margin="0,5,0,0"
                Header="Status">
                <controls:StatusTextBox Text="{Binding Status}" />
            </GroupBox>
            <StackPanel
                Grid.Row="2"
                Margin="10"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Label Content="Current state: " />
                <TextBox
                    Width="150"
                    VerticalContentAlignment="Center"
                    IsReadOnly="True"
                    Text="{Binding CurrentState, Mode=OneWay}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
